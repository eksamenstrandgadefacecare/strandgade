<style>
  h1 {
    /* MANGLER FONT SIZE */
    font-family: "Vidaloka", serif;
    color: var(--Brun);
    text-align: center;
  }

  h2 {
    /* MANGLER FONT SIZE */
    font-family: "Vidaloka", serif;
    color: var(--Brun);
    text-align: center;
  }
  .blad_top {
    position: absolute;
    top: 0;
    left: 0;
    width: 90%;
    height: auto;
    z-index: -1; /* Push it behind the rest of the content */
    overflow: hidden;
  }

  .blad_venstre {
    width: 80%;
    z-index: -1;
    position: relative;
    top: -100px;
  }

  .blad_hojre {
    position: relative;
    width: 80%;
    overflow: hidden;
    right: 0;
  }
</style>
