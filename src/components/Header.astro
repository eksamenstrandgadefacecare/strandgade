---
import "../styles/global.css";
---

<header>
  <div class="container">
    <div class="subcontainer">
      <nav class="navbar">
        <a href="/"><img class="logo" src="" alt="Logo" /></a>
        <ul class="nav-menu">
          <li class="nav-item"><a class="nav-link" href="/">FORSIDE</a></li>
          <li class="nav-item"><a class="nav-link" href="/liste">BEHANDLINGER</a></li>
          <li class="nav-item"><a class="nav-link" href="/produkter">PRODUKTER</a></li>
          <li class="nav-item"><a class="nav-link" href="/produkter">OM KLINIKKEN</a></li>
          <!-- INDSÆT KNAP -->
        </ul>

        <div class="hamburger">
          <div class="bar"></div>
          <div class="bar"></div>
          <div class="bar"></div>
          <div class="bar"></div>
        </div>
      </nav>
    </div>
  </div>

  <script>
    const hamburger = document.querySelector(".hamburger");
    const navMenu = document.querySelector(".nav-menu");

    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
    });

    document.querySelectorAll(".nav-link").forEach((n) =>
      n.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
      })
    );
  </script>

  <style>
    ul {
      list-style-type: none;
      text-align: right;
    }

    li {
      display: inline;
    }
    .nav-menu {
      display: flex;
      align-items: center;
      background: transparent;
    }

    li a {
      font-family: "Vidaloka", serif;
      color: var(--Mørkgrøn);
      font-size: 1rem;
      text-align: right;
      text-decoration: none;
      justify-content: space-evenly;
      border-radius: 40px;
      padding: 20px;
    }

    .navbar li a:hover {
      cursor: pointer;
      color: var(--Lysgrøn);
    }

    .container {
      width: 100%;
      margin: auto;
    }

    .subcontainer {
      width: auto;
      margin: auto;
    }

    .navbar {
      width: 100%;
      min-height: 7px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .nav-menu {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
    }

    .hamburger {
      display: block;
      cursor: pointer;
    }

    .bar {
      display: block;
      width: 30px;
      height: 2px;
      margin: 5px 0;
      transition: all 0.8s ease;
      background-color: var(--Mørkgrøn);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: translateY(6px) rotate(40deg);
    }

    .hamburger.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .nav-menu {
      position: absolute;
      left: -200%;
      top: 0;
      gap: 0;
      flex-direction: column;
      background-color: white;
      width: 100%;
      text-align: center;
      transition: 0.3s;
      z-index: 0;
    }

    .nav-item {
      margin: 16px 0;
    }

    .nav-menu.active {
      left: 0;
    }

    /* DESKTOP */
    @media (min-width: 800px) {
      /* li {
        list-style-type: none;
        align-items: center;
        display: inline-block;
        padding: 10px;
      }

      ul {
        text-align: right;
      } */

      .hamburger {
        display: none;
      }

      .nav-menu {
        position: static;
        display: flex;
        flex-direction: row;
        gap: 20px;
        width: auto;
        background: transparent;
      }
      .nav-item {
      }

      .logo {
      }
    }
  </style>
</header>
